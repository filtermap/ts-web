{
  "name": "ts-web",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "run-p dev:client dev:server",
    "dev:client": "parcel watch src/client/index.html --out-dir=dist/client",
    "dev:server": "nodemon --watch src/server --exec run-s build:server start",
    "type-check": "tsc --noEmit",
    "lint": "eslint --ext .js,.ts,.tsx --ignore-path .gitignore .",
    "test": "jest",
    "build": "run-s type-check lint test build:client build:server",
    "build:client": "parcel build src/client/index.html --out-dir=dist/client",
    "build:server": "parcel build src/server/index.ts --out-dir=dist/server --target node",
    "start": "node dist/server/index.js"
  },
  "dependencies": {
    "@types/express": "^4.17.7",
    "@types/jest": "^26.0.5",
    "@types/node": "^14.0.24",
    "@types/react": "^16.9.43",
    "@types/react-dom": "^16.9.8",
    "@typescript-eslint/eslint-plugin": "^3.7.0",
    "@typescript-eslint/parser": "^3.7.0",
    "eslint": "^7.5.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-react": "^7.20.3",
    "express": "^4.17.1",
    "jest": "^26.1.0",
    "nodemon": "^2.0.4",
    "npm-run-all": "^4.1.5",
    "parcel-bundler": "^1.12.4",
    "prettier": "^2.0.5",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "ts-jest": "^26.1.3",
    "typescript": "^3.9.7"
  }
}
