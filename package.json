{
  "name": "ts-web",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "watch": "run-p watch:client watch:server",
    "watch:client": "parcel watch src/client/index.html --out-dir=dist/client",
    "watch:server": "nodemon --watch src/server --exec run-s build:server start",
    "type-check": "tsc --noEmit",
    "lint": "eslint --ext .js,.ts,.tsx .",
    "test": "jest",
    "build": "run-s type-check lint test build:client build:server",
    "build:client": "parcel build src/client/index.html --out-dir=dist/client",
    "build:server": "parcel build src/server/index.ts --out-dir=dist/server --target node",
    "start": "node dist/server/index.js"
  },
  "dependencies": {
    "@types/express": "^4.17.0",
    "@types/jest": "^24.0.17",
    "@types/node": "^12.7.1",
    "@types/react": "^16.9.1",
    "@types/react-dom": "^16.8.5",
    "@typescript-eslint/eslint-plugin": "^1.13.0",
    "@typescript-eslint/parser": "^1.13.0",
    "eslint": "^6.1.0",
    "eslint-config-prettier": "^6.0.0",
    "eslint-plugin-prettier": "^3.1.0",
    "eslint-plugin-react": "^7.14.3",
    "express": "^4.17.1",
    "jest": "^24.8.0",
    "nodemon": "^1.19.1",
    "npm-run-all": "^4.1.5",
    "parcel-bundler": "^1.12.3",
    "prettier": "^1.18.2",
    "react": "^16.9.0",
    "react-dom": "^16.9.0",
    "ts-jest": "^24.0.2",
    "typescript": "^3.5.3"
  }
}
