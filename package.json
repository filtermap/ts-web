{
  "name": "ts-web",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "run-p dev:client dev:server",
    "dev:client": "parcel watch src/client/index.html --out-dir=dist/client",
    "dev:server": "nodemon --watch src/server --exec run-s build:server start",
    "type-check": "tsc --noEmit",
    "lint": "eslint --ext .js,.ts,.tsx .",
    "test": "jest",
    "build": "run-s type-check lint test build:client build:server",
    "build:client": "parcel build src/client/index.html --out-dir=dist/client",
    "build:server": "parcel build src/server/index.ts --out-dir=dist/server --target node",
    "start": "node dist/server/index.js"
  },
  "dependencies": {
    "@types/express": "^4.17.6",
    "@types/jest": "^25.2.1",
    "@types/node": "^13.13.1",
    "@types/react": "^16.9.34",
    "@types/react-dom": "^16.9.6",
    "@typescript-eslint/eslint-plugin": "^2.29.0",
    "@typescript-eslint/parser": "^2.29.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.1",
    "eslint-plugin-prettier": "^3.1.3",
    "eslint-plugin-react": "^7.19.0",
    "express": "^4.17.1",
    "jest": "^25.4.0",
    "nodemon": "^2.0.3",
    "npm-run-all": "^4.1.5",
    "parcel-bundler": "^1.12.4",
    "prettier": "^2.0.4",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "ts-jest": "^25.4.0",
    "typescript": "^3.8.3"
  }
}
